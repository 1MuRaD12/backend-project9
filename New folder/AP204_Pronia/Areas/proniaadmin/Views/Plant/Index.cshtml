@model List<Plant>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-controller="Plant" asp-action="Create" class="btn btn-success">Create Plant</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Image
                </th>

                <th>
                    Name
                </th>

                <th>
                    Price
                </th>

                <th>
                    Color
                </th>

                <th>
                    settings
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (Plant plant in Model)
            {
                <tr>
                    <td>
                        <img style="width:90px; height:100px;" src="~/assets/images/website-images/@plant.PlantImages.FirstOrDefault(p=>p.IsMain == true).ImagePath" />
                    </td>

                    <td>
                        @plant.Name
                    </td>

                    <td>
                        $@plant.Price
                    </td>

                    <td>
                        @plant.Color
                    </td>

                    <td>

                        <div class="d-flex">
                            <div class="detail">
                                <a asp-controller="Plant" asp-action="Detail" asp-route-Id="@plant.Id" class="btn btn-primary">
                                    <i class="mdi mdi-details"></i>
                                </a>
                            </div>
                            <div class="update">
                                <a asp-controller="Plant" asp-action="Edit" asp-route-Id="@plant.Id" class="btn btn-warning">
                                    <i class="mdi mdi-arrow-up-bold-circle"></i>
                                </a>
                            </div>
                            <div class="delate">
                                <a asp-controller="Plant" asp-action="Delete" asp-route-Id="@plant.Id" class="btn btn-danger">
                                    <i class="mdi mdi-delete-forever"></i>
                                </a>
                            </div>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


